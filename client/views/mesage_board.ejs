<html>
	<head>
		<link rel="stylesheet" type="text/css" href="./../static/style.css">
		<script type="text/javascript">
			
		</script>
	</head>

	<body>
	<h1>Welcome to the Echo Group Message Board Page</h1>
		<form action="/post/message" method="POST">
			Name: <input type="text" name="name"><br><br>
			Post a Message: <input type="text" name="message"><br><br>
			<input type="submit" value="Post Message"><br><br>
		</form>
		<% for(var x in post){ %>
			<div style="background-color: lightblue; margin-left: 15px; padding: 15px; border-radius: 5px">
				<h3 style="color: blue">Posted By: <%= post[x].name %>, Date: <%= post[x].date %></h3>
				<h3 style="color: yellow"><%= post[x].text %></h3>
			
				<% for(let i = 0; i < post[x].comments.length; i++){ %>
					<h5 style="margin-left: 20px; color: blue"><%= post[x].comments[i].name %>, <%= post[x].comments[i].date %></h5>
					<h5 style="margin-left: 20px"><%= post[x].comments[i].text %></h5>
				<% } %>
			</div>
			<br>
			<form action="/post/comment/<%= post[x]._id %>" method="POST">
				Name: <input type="text" name="name">
				comment: <input type="text" name="comment"><br><br>
				<input type="submit" value="Post Comment"><br>
			</form><br>
		<% } %>
	</body>
</html>